# -*- mode: ruby -*-
# vi: set ft=ruby :

imagen = "geerlingguy/ubuntu2004"

Vagrant.configure("2") do |config|
  config.ssh.insert_key = false
  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.define "master" do |m|
    m.vm.box = imagen
    m.vm.network "private_network", ip: "192.168.60.10"
    m.vm.hostname = "master"

    m.vm.provider :virtualbox do |vb|
      vb.name = "master"
      vb.memory = 2048
      vb.cpus = 2
      vb.check_guest_additions = false
    end

    m.vm.provision :hosts do |p|
      p.autoconfigure = true
      p.sync_hosts = true
      p.add_host "192.168.60.11", ["client.local"]
    end
  end	

  config.vm.define "client" do |c|
    c.vm.box = imagen
    c.vm.network "private_network", ip: "192.168.60.11"
    c.vm.hostname = "client"
   
    c.vm.provider :virtualbox do |vb|
       vb.name = "client"
       vb.check_guest_additions = false
    end

    c.vm.provision :hosts do |p|
      p.autoconfigure = true
      p.sync_hosts = true
      p.add_host "192.168.60.10", ["master.local"]
    end
  end	
end	
